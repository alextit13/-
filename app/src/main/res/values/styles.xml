<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorSecondary">@color/main_green</item>
    </style>

    <style name="my_rating_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignStart">@+id/text_name</item>
        <item name="android:rating">4</item>
        <item name="android:progressTint" tools:targetApi="lollipop">#ffe414</item>
    </style>

</resources>
