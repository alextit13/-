<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/picture_frame"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    tools:text="Название организации и еще какой-то текст" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/number_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    tools:text="+225748555" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/marka_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/main_green"
                    android:textStyle="bold"
                    tools:text="Mercedes,AUDI" />

                <TableRow
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_location_on_black_24dp"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:id="@+id/adress_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#000"
                        tools:text="Москва, Ленина 7" />

                </TableRow>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_autoservices"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/cast_abc_scrubber_control_to_pressed_mtrl_005" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:isIndicator="true"
                android:id="@+id/ratingBar"
                style="@style/my_rating_bar" />

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПОДРОБНЕЕ"
                android:textColor="@color/main_green"
                android:textStyle="bold" />

        </TableRow>

    </LinearLayout>

</FrameLayout>