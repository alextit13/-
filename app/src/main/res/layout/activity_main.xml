<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.bingerdranch.android.bestautoservice.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/main_green"
        android:gravity="center"
        android:theme="@style/ThemeToolbar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:subtitleTextColor="@color/main_green"
        app:titleTextColor="@color/main_green">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_main_list"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/main_list_toolbar_text"
                android:gravity="center"
                android:text="BESTAUTOSERVICES"
                android:textColor="#fff"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:divider="#fff"
        android:layout_below="@id/toolbar_main_list"
        android:layout_margin="10sp"
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</RelativeLayout>
