<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/shape"
    android:padding="10sp"
    android:layout_marginTop="15sp"
    tools:context="com.bingerdranch.android.bestautoservice.Item">
    <TableRow
        android:layout_margin="5sp"
        android:background="@drawable/shape_item_1"
        android:gravity="center">
        <TextView
            android:textAllCaps="true"
            android:layout_margin="5sp"
            android:id="@+id/name"
            android:textColor="#000000"
            tools:text="Название СТО"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:text="@string/text_marka"/>
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:text="@string/text_model"/>
    </TableRow>
    <TableRow
        android:layout_margin="5sp"
        android:background="@drawable/shape_item_2">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5sp"
            tools:text="Марки машин"
            android:background="@drawable/shape_item_3"
            android:id="@+id/marka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_margin="5sp"
            tools:text="Модели машин"
            android:background="@drawable/shape_item_3"
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:text="@string/text_okrug"/>
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:text="@string/text_rayon"/>
    </TableRow>
    <TableRow
        android:layout_margin="5sp"
        android:background="@drawable/shape_item_3">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5sp"
            tools:text="Округ"
            android:id="@+id/okrug"
            android:background="@drawable/shape_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_margin="5sp"
            tools:text="Район"
            android:id="@+id/rayon"
            android:background="@drawable/shape_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TextView
        android:text="@string/text_metro"
        android:gravity="center"
        android:textColor="#fff"/>
    <TextView
        android:layout_margin="5sp"
        tools:text="Метро"
        android:background="@drawable/shape_item_2"
        android:id="@+id/metro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="5sp"
        tools:text="Адрес"
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="5sp"
        tools:text="Номер телефона"
        android:background="@drawable/shape_item_1"
        android:id="@+id/nomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="5sp"
        tools:text="Работы:"
        android:id="@+id/vid_rabot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_open_the_map"
        android:background="@drawable/shape"
        android:text="@string/open_on_the_map"/>
    <TextView
        android:text="@string/text_otzivi"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textColor="#ffffff"/>
    <ScrollView
        android:layout_margin="5sp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:background="@drawable/shape_item_4"
                android:textColor="#fff"
                android:layout_margin="5sp"
                tools:text="Отзыв"
                android:id="@+id/otzivi_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </ScrollView>
</TableLayout>
