<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20sp"
    android:layout_marginTop="20sp"
    android:background="@drawable/shape">
    <TableRow>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:id="@+id/text_name"
            android:textColor="@color/colorTexts"
            tools:text="@string/text_name"
            android:layout_weight="1"/>
    </TableRow>
    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:src="@android:drawable/divider_horizontal_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" />
    <TextView
        android:textColor="#fff"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:id="@+id/adress"
        tools:text="@string/adress"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/rating_1"
            android:src="@drawable/rating_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/rating_2"
            android:src="@drawable/rating_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/rating_3"
            android:src="@drawable/rating_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/rating_4"
            android:src="@drawable/rating_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/rating_5"
            android:src="@drawable/rating_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/image_view_add_otziv"
        android:textColor="#000000"
        android:textAlignment="center"
        android:background="@drawable/shape_item_2"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</TableLayout>