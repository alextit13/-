<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_container"
    android:padding="10sp"
    android:background="#78909c"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.bingerdranch.android.bestautoservice.Item">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center"
                android:background="@drawable/shape">
                <TextView
                    android:textAllCaps="true"
                    android:layout_margin="5sp"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    tools:text="Название СТО"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/zv_1"
                    android:src="@drawable/rating_not_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/zv_2"
                    android:src="@drawable/rating_not_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/zv_3"
                    android:src="@drawable/rating_not_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/zv_4"
                    android:src="@drawable/rating_not_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/zv_5"
                    android:src="@drawable/rating_not_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TableRow
                android:background="@drawable/shape"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:src="@drawable/ic_directions_car_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/markas"
                    android:textColor="#000000"
                    android:gravity="end"
                    tools:text="@string/text_model"/>
            </TableRow>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">
                <TextView
                    android:textColor="#000000"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Модели машин"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/models"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    tools:text="Модели машин"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TableRow
                android:layout_marginBottom="10sp"
                android:background="@drawable/shape_item_2"
                android:gravity="center"
                android:layout_gravity="center">
                <TextView
                    android:textColor="#000000"
                    android:gravity="start"
                    android:text="@string/text_okrug"/>
                <TextView
                    android:textColor="#000000"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    tools:text="Округ"
                    android:id="@+id/okrug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape">
                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/text_rayon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <ImageView
                    android:src="@drawable/divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    tools:text="Район"
                    android:gravity="end"
                    android:id="@+id/rayon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_item_5">
                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/grafik_raboti"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <ImageView
                    android:src="@drawable/divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    tools:text="График работы"
                    android:gravity="end"
                    android:id="@+id/grafik_raboti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:background="@drawable/shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_metro"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <ImageView
                    android:src="@drawable/divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/metro"
                    android:text="@string/text_metro"
                    android:layout_gravity="end"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/ic_navigation_black_24dp"/>
                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="5sp"
                    tools:text="Адрес"
                    android:id="@+id/adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TableRow
                android:gravity="end">
                <TextView
                    android:background="@drawable/shape"
                    android:textSize="20sp"
                    android:layout_margin="5sp"
                    tools:text="Номер телефона"
                    android:id="@+id/nomer"
                    android:gravity="center"
                    android:textColor="#0c01ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TextView
                android:layout_margin="5sp"
                tools:text="Работы:"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/vid_rabot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@drawable/shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45sp"
                android:layout_marginEnd="45sp"
                android:id="@+id/button_open_the_map"
                android:text="@string/open_on_the_map"/>
            <TextView
                android:text="@string/text_otzivi"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#000000"/>
            <TextView
                android:background="@drawable/shape"
                android:id="@+id/text_view_add_otziv"
                android:text="@string/add_otziv"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#000000"/>
            <ScrollView
                android:layout_margin="5sp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_margin="5sp"
                        tools:text="Отзыв"
                        android:id="@+id/otzivi_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </TableRow>
            </ScrollView>
        </TableLayout>
    </ScrollView>
</LinearLayout>

